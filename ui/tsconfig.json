{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "es2018"],
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": [
    "test",
    "release",
    "app/main.prod.js",
    "app/main.prod.js.map",
    "app/renderer.prod.js",
    "app/renderer.prod.js.map",
    "app/style.css",
    "app/style.css.map",
    "app/dist",
    "app/main.js",
    "app/main.js.map"
  ]
}
